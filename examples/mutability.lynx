mut ma = 1;  -- Mutable binding
a = ma;
ma := 2;
println a  -- 1

ra: Ref Int = &1;  -- Mutable reference
mut rb = ra;
rb := &2;
println ra>>;  -- 1
rc = ra;
rc << 3;
println ra>>  -- 3

Stash = | A => { content: Ref A }

f: (A: Type)? -> Stash A -> Ref A =
  | { content } => content

stash = { content = &0 };
f stash << 1;
assert_eq stash.content>> 1
