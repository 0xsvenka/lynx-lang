mut va = 1;  -- Mutable binding
a = va;
va := 2;
println a  -- 1

ra: Ref Int = &1;  -- Mutable reference
mut rb = ra;
rb := &2;
println ra>>;  -- 1
rc = ra;
rc << 3;
println ra>>  -- 3

stash = | a => { content: Ref a }

f: (a: Type)? -> stash a -> Ref a =
  | { content } => content

my_stash = { content = &0 };
f my_stash << 1;
assert_eq my_stash.content>> 1
